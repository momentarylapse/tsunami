					ToggleButton modifier-sharp "â™¯" flat big "tooltip=Sharp - new note is 1 semitone above the key" expandx ignorefocus
					ToggleButton modifier-flat "â™­" flat big "tooltip=Flat - new note is 1 semitone below the key" expandx ignorefocus
					ToggleButton modifier-natural "â™®" flat big "tooltip=Natural - new note ignores any modifiers in the key" expandx ignorefocus
			Group grp-flags "Flags"
				Grid ? ""
					Button flag-none "âœ‚" big expandx "tooltip=Clear all flags" ignorefocus
					Button flag-trill "ğ†–" big expandx "tooltip=Set trill flag" ignorefocus
					Button flag-staccato "." big expandx "tooltip=Set staccato flag" ignorefocus
					Button flag-tenuto "_" big expandx "tooltip=Set tenuto flag" ignorefocus
			Group grp_operations "Operations"
				Grid ? ""
					Button quantize "Q" big "tooltip=Quantize: align selected notes to grid of sub beats" expandx ignorefocus
					Button apply_string "ğ„›" big "tooltip=Set string: assign selected notes to this string and find the correct fret position without changing the pitch (TAB mode)" expandx ignorefocus
